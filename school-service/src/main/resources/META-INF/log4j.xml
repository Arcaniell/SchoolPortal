<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


 
    <appender name="ErrorLogsFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="SchoolProtalLogs/Errors/errors.log" />
        <param name="Threshold" value="ERROR" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p (%F:%L:%M)  %c{1}  - %m%n" />
        </layout>
    </appender> 

    <appender name="InformationLogsFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="SchoolProtalLogs/Information/information.log" />
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %t [%-40.40c] %x - %m%n"/>
        </layout>
    </appender>


    <!--sets the priority log level for org.springframework -->
    <logger name="ErrorLogs">
    	 <level value="ERROR" />     
         <appender-ref ref="ErrorLogsFile"/>
    </logger>


    <logger name="InformationLogs">
    	 <level value="INFO" />     
        <appender-ref ref="InformationLogsFile" />
    </logger>


    <!--sets the default priority log level -->
    <root>
        <priority value="all"></priority>
        <appender-ref ref="ErrorLogsFile" />
    </root>


</log4j:configuration>